<UserControl x:Class="P05_01_DI_Contactos_MAROTO_angel.Views.ChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P05_01_DI_Contactos_MAROTO_angel.Views"
             xmlns:p="clr-namespace:P05_01_DI_Contactos_MAROTO_angel.Properties" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:viewmodels="clr-namespace:P05_01_DI_Contactos_MAROTO_angel.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:ChartViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="0,20,20,0" Margin="0,5,5,0">
            <lvc:PieChart Series="{Binding PieSeries}" LegendLocation="Bottom" />
        </Border>
    </Grid>
</UserControl>
